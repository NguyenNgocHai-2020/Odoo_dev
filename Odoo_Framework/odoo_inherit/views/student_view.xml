<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="student_form_view_inherit" model="ir.ui.view">
        <field name="name">Inherit Student Form View</field>
        <field name="model">student</field>
        <field name="inherit_id" ref="odoo_demo_2.student_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form//field[@name='name']" position="before">
                <field name="code" force_save="1"/>
            </xpath>
        </field>
    </record>

    <record id="student_tree_view_inherit" model="ir.ui.view">
        <field name="name">Inherit Student Tree View</field>
        <field name="model">student</field>
        <field name="inherit_id" ref="odoo_demo_2.student_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree//field[@name='name']" position="before">
                <field name="code"/>
            </xpath>
        </field>
    </record>
</odoo>
